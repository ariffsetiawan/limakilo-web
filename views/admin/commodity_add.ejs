        <div class="row" style="min-height:400px;">
          <div class="col-md-12">
            <div class="page-header">
              <h2>Tambah Komoditi</h2>
            </div>
            
            <div class="panel" style="border:none;">

            <div class="alert alert-danger err-area" style="display:none"></div>

            <div class="row col-md-6 col-md-offset-3">

              <form method="post" action="" id="form-commodity">
              <input type="hidden" name="user" id="user" value="<%= user.id %>">
                
                  <div class="form-group">
                    <label for="type">Jenis Komoditi</label>
                    <select name="type" class="form-control">
                      <option value="1">Bawang Merah</option>
                    </select>
                  </div>
    

                  <div class="form-group">
                    <label for="quantity">Jumlah Komoditi</label>
                    <input type="quantity" name="quantity" class="form-control" id="quantity" placeholder="Jumlah dalam satuan kg">
                  </div>

                  <div class="form-group">
                    <label for="status">Status Komoditi</label>
                    <select name="status" class="form-control">
                      <option value="akan_dijual">Akan Dijual</option>
                      <option value="telah_dijual">Telah Dijual</option>
                    </select>
                  </div>
    

                  <div class="form-group">
                    <label for="price">Harga Komoditi</label>
                    <input type="price" name="price" class="form-control" id="price" placeholder="Harga per kg">
                  </div>


                  <div class="form-group">
                    <div class="input-group col-md-4">
                      <input type="button" value="Save" class="form-control btn btn-primary" onClick="saveCommodity()">
                    </div>
                  </div>
              </form>
              

            </div>

                                
