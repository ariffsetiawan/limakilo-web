    <script>
    
        function saveCommodity(){
           
           $.ajax({
            
            url:"/commodity/",
            type:"post",
            data:$("#form-commodity").serialize(),
            success:function(res){
                
                window.location.href = '/dashboard_gapoktan';
                return false;
            },
            error:function(xhr, status, error){
                
                console.log(xhr.responseText);
                var err = '';
                $.each(JSON.parse(xhr.responseText) , function(i, item) {
                   
                     err +='<li>'+item.msg+'</li>';
                });
                $(".err-area").show();    
                $(".err-area").html(err);    
                return false;
            }
            
           });
        }
    
    </script>

