    <div id="" class="" style="margin-top:100px;">
        <div class="container">
            <div class="row">
          <div class="col-md-12 text-center">
            <div class="page-header">
  
              <h2><%=title%></h2>
              
            </div>
            <div>
            <div class="panel">

            <table class="table table-condensed">
              <thead>
                <tr>
                  <th># Order ID</th>
                  <th>Stock Name</th>
                  <th>Quantity</th>
                  <th>Price</th>
                  <th>Name</th>
                  <th>Address</th>
                  <th>Date</th>
                  <th>Status</th>
                  <th>Verification</th>
                  
                </tr>
              </thead>
              <tbody>

              <% if(data.length){ 
                                      
                  for(var i = 0;i < data.length;i++) { %>
                <tr style="text-align:left;">
                  <th scope="row"><%=data[i].ord_id%></th>
                  <td><%=data[i].sto_name%></td>
                  <td><%=data[i].ord_quantity%></td>
                  <td><%=data[i].ord_price%></td>
                  <td><%=data[i].user_firstname%> &nbsp; <%=data[i].user_lastname%></td>
                  <td><%=data[i].ord_address%></td>
                  <td><%=moment(data[i].ord_date)%></td>
                  <td><%=data[i].ord_status%></td>
                  <td><%=data[i].ord_verified%></td>
                  
                </tr>

                <% }

                 }else{ %>
                  <tr>
                  <td colspan="7">No Data.</td>
                  </tr>
                <% } %>

              </tbody>
            </table>

            

            
                    
