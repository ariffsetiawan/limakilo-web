          <div class="col-md-12">
            <div class="page-header">
              <h2><%=title%></h2>
            </div>
            <div>
            <div class="panel">

            <table class="table table-condensed" style="font-size:13px;">
              <thead>
                <tr bgcolor="#f0f0f0">
                  <th># Order ID</th>
                  <th align="right">Price Amount</th>
                  <th align="right">Payment Code</th>
                  <th>Name</th>
                  <th align="right">Payment Amount</th>
                  <th>Date</th>
                  <th>Status</th>
                  <!-- <th>Verification</th> -->
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>

              <% if(data.length){ 
                                      
                  for(var i = 0;i < data.length;i++) { %>
                <tr style="text-align:left;">
                  <th scope="row"><%=data[i].con_ord_id%></th>
                  <td align="right"><%=numeral(data[i].ord_amount).format('0,0')%></td>
                  <td align="right"><%=data[i].ord_payment_code%></td>
                  <td><%=data[i].con_name%></td>
                  <td align="right"><%=numeral(data[i].con_payment_amount).format('0,0')%></td>
                  <td><%=dateFormat(data[i].con_date)%></td>
                  <td>
                  <% if (data[i].ord_status=="order_processed"){ %>
                  PESANAN DIPROSES
                  <% } else if (data[i].ord_status=="order_paid") { %>
                    KONFIRMASI PEMBAYARAN
                  <% } else if (data[i].ord_status=="order_verified") { %>
                    VERIFIKASI PEMBAYARAN
                  <% } else if (data[i].ord_status=="order_shipment") { %>
                    PESANAN DIKIRIM
                  <% } else if (data[i].ord_status=="order_received") { %>
                    PESANAN DITERIMA
                  <% } else if (data[i].ord_status=="order_discard") { %>
                    <span class="label label-danger">PESANAN DIBATALKAN</span>
                  <% } %>
                  </td>
                  <!-- <td><%=data[i].con_verified%></td> -->
                  <td>
                  <% if (data[i].con_verified==1){ %>

                  <span class="label label-success">Verified</span>

                  <% } else { %>
                    <a href="verification/<%=data[i].con_ord_id%>"><span class="label label-primary">Verify</span></a>
                  <% }

                  %>
                    
                  

                  </td>
                  
                </tr>

                <% }

                 }else{ %>
                  <tr>
                  <td colspan="7">No Data.</td>
                  </tr>
                <% } %>

              </tbody>
            </table>
                    
